{
    "name": "YouTube Controller Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Controls YouTube via DOM manipulation and receives commands from Python",
    "permissions": [
    "http://localhost:8080/",
    "ws://localhost:8080/socket.io/*"
  ],
  
    "content_security_policy": {
      "extension_pages": "connect-src ws://127.0.0.1:8080; default-src 'self'"
    },
    "background": {
      "service_worker": "background.js"
  },
    "content_scripts": [
      {
        "matches": [
        "*://www.youtube.com/*",
        "*://open.spotify.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["socket.io.js"],
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*",
        "https://open.spotify.com/*",
        "https://music.apple.com/*",
        "https://soundcloud.com/*"
      ]
    }
  ]
}
